extends layouts

block content

  #login
    #login-container
      if error
        .alert.alert-danger.text-center.alert-dismissible.fade.show.mt-2
          div= message

      h4.mb-3.title.text-center Reset Password
      form(method='POST' action="/auth/password/new/"+id)
       
        .form-group
          label(for='password') New Password
          input.form-control(type='password', name='password', value= '', placeholder='New password', autofocus=true)
        .form-group
          label.mt-2(for='confirm') Confirm Password
          input.form-control(type='password', name='confirm', value= '', placeholder='Confirm password')
        .form-group.mt-3
        button.btn.btn-primary(type='submit') Reset Password