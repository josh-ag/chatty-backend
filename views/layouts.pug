doctype html
html
  head
    title Chatty
    <!-- CSS only -->
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    link(rel="stylesheet", href="/stylesheet/styles.css")
    <!-- JavaScript Bundle with Popper -->
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")

  body
    .navbar.navbar-dark.bg-dark
      .container
        a(href="").navbar-brand Chatty
        if user
          .nav.justify-content-end
            .nav-item 
              a.nav-link(href="/api.chatty/w/profile/"+user.id) profile 
            .nav-item 
              a.btn.btn-danger(href="/api.chatty/w/logout") Logout
      
    .container
     
      if message

        if message.error
          .alert.alert-danger.text-center.alert-dismissible.fade.show.mt-2
            div= message.error
            button.btn.btn-close(data-bs-dismiss="alert" arial-label="close")
        if message.success 
          .alert.alert-success.text-center.dismisable.alert-dismissible.fade.show.mt-2
            div= message.success
            button.btn.btn-close(data-bs-dismiss="alert" arial-label="close")
     

      block content